{% extends 'base.html.twig' %}

{% block title %}Gestion des lots{% endblock %}

{% block body %}
    <div class="container my-5 p-5 col-lg-5 justify-content-center">
        <h3>Gestion des lots</h3>
        <ul class="list-group">
            <li class="list-group-item"><a href="{{ path('app_admin_ajouter_lots') }}">Ajouter des lots</a></li>
            <li class="list-group-item"><a href="{{ path('app_admin_lots') }}">Modifier des lots</a></li>
            <li class="list-group-item"><a href="{{ path('app_admin_supprimer_lot_liste') }}">Supprimer des lots</a></li>
        </ul>
        <h4 class="mt-4">Liste des lots</h4>
        {% set lots = lots|default([]) %}
        <ul class="list-group">
            {% for lot in lots %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Lot #{{ lot.id }}
                    <span>
                        <a href="{{ path('app_admin_modifier_lot', {'id': lot.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <form method="post" action="{{ path('app_admin_supprimer_lot', {'id': lot.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lot ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lot.id) }}">
                            <button class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </span>
                </li>
            {% else %}
                <li class="list-group-item">Aucun lot enregistré.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
