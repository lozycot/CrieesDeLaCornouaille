{% extends 'base.html.twig' %}

{% block title %}Supprimer des lots{% endblock %}

{% block body %}
<div class="container my-5 p-5 col-lg-5 justify-content-center">
    <h3>Supprimer des lots</h3>
    <ul class="list-group">
        {% for lot in lots %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Lot #{{ lot.id }}
                <form method="post"
                      action="{{ path('app_admin_supprimer_lot', {'id': lot.id}) }}"
                      style="display:inline;"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce lot ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lot.id) }}">
                    <button class="btn btn-sm btn-danger">Supprimer</button>
                </form>
            </li>
        {% else %}
            <li class="list-group-item">Aucun lot enregistré.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
