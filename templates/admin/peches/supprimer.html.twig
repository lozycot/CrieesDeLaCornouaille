{% extends 'base.html.twig' %}

{% block title %}Supprimer des pêches{% endblock %}

{% block body %}
<div class="container my-5 p-5 col-lg-5 justify-content-center">
    <h3>Supprimer des pêches</h3>
    <ul class="list-group">
        {% for peche in peches %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Pêche #{{ peche.id }} - {{ peche.datePeche|date('d/m/Y') }}
                <form method="post"
                      action="{{ path('app_admin_supprimer_peche', {'id': peche.id}) }}"
                      style="display:inline;"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette pêche ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ peche.id) }}">
                    <button class="btn btn-sm btn-danger">Supprimer</button>
                </form>
            </li>
        {% else %}
            <li class="list-group-item">Aucune pêche enregistrée.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
