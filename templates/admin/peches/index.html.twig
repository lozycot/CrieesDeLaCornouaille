{% extends 'base.html.twig' %}

{% block title %}Gestion des pêches{% endblock %}

{% block body %}
    <div class="container my-5 p-5 col-lg-10">
        <h3>Gestion des pêches</h3>
        <div class="mb-3">
            <ul class="list-group">
                <li class="list-group-item"><a href="{{ path('app_admin_ajouter_peches') }}">Ajouter des pêches</a></li>
            </ul>
        </div>
        <table class="table table-bordered table-striped align-middle" style="table-layout: fixed; width: 100%; min-width: 700px;">
            <thead>
                <tr>
                    <th style="width: 50px;">ID</th>
                    <th style="width: 120px;">Date</th>
                    <th style="width: 160px;">Durée marée (h)</th>
                    <th style="width: 180px;">Bateau</th>
                    <th style="width: 120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for peche in peches %}
                    <tr>
                        <td>{{ peche.id }}</td>
                        <td>{{ peche.datePeche|date('d/m/Y') }}</td>
                        <td>{{ peche.dureeMaree }}</td>
                        <td>{{ peche.bateau.nomBateau }}</td>
                        <td class="text-center align-middle">
                            <div class="d-flex justify-content-center align-items-center gap-2">
                                <a href="{{ path('app_admin_modifier_peche', {'id': peche.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                <form method="post" action="{{ path('app_admin_supprimer_peche', {'id': peche.id}) }}" style="display:inline;" onsubmit="return confirm('Supprimer cette pêche ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ peche.id) }}">
                                    <button class="btn btn-sm btn-danger">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="5">Aucune pêche.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
