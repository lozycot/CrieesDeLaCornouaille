{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-5 p-5 col-lg-5 justify-content-center">
        {{ affichageDesMessages }}
        <h3>Créer un utilisateur</h3>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.login, {label: 'Nom d\'utilisateur'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
            {{ form_row(registrationForm.email, {label: 'Adresse email'}) }}
            {{ form_row(registrationForm.roles, {label: 'Rôles'}) }}

            <button type="submit" class="btn btn-primary">Créer l'utilisateur</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
