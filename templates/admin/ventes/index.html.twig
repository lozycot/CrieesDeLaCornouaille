{% extends 'base.html.twig' %}

{% block title %}Gestion des ventes{% endblock %}

{% block body %}
    <div class="container my-5 p-5 col-lg-5 justify-content-center">
        <h3>Gestion des ventes</h3>
        <ul class="list-group">
            <li class="list-group-item"><a href="{{ path('app_admin_ajouter_ventes') }}">Ajouter des ventes</a></li>
            <li class="list-group-item"><a href="{{ path('app_ventes') }}">Modifier des ventes</a></li>
            <li class="list-group-item"><a href="{{ path('app_ventes') }}">Supprimer des ventes</a></li>
        </ul>
        <h4 class="mt-4">Liste des ventes</h4>
        <ul class="list-group">
            {% for vente in ventes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Vente #{{ vente.id }} - {{ vente.dateVente|date('d/m/Y') }}
                    <span>
                        <a href="{{ path('app_admin_modifier_vente', {'id': vente.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <form method="post" action="{{ path('app_admin_supprimer_vente', {'id': vente.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette vente ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vente.id) }}">
                            <button class="btn btn-sm btn-danger">Supprimer</button>
                        </form>
                    </span>
                </li>
            {% else %}
                <li class="list-group-item">Aucune vente enregistrée.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
