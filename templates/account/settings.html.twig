{% extends 'base.html.twig' %}

{% block title %}Paramètres du compte{% endblock %}

{% block body %}
<div class="container my-5 p-5 col-lg-6 justify-content-center">
    {{ affichageDesMessages }}
    <h1>Paramètres du compte</h1>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Informations du compte</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Login :</strong> {{ app.user.login }}</li>
                <li class="list-group-item"><strong>Email :</strong> {{ app.user.email }}</li>
                <li class="list-group-item"><strong>Rôles :</strong> {{ app.user.roles|join(', ') }}</li>
            </ul>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Changer le mot de passe</h5>
            <p class="text-muted">Fonctionnalité à venir.</p>
        </div>
    </div>
    <a href="/logout" class="btn btn-danger">Déconnexion</a>
</div>
{% endblock %}
